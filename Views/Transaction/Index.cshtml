@model IEnumerable<TransactionModel>
@{
    ViewData["Title"] = "Transactions";
}

<div class="text-center">
    <div class="row pt-4" style="width:100%">
        <div class="col-3">
            <h2>Transactions</h2>
        </div>
        <div class="col-9 text-end pt-2">
            <a asp-controller="Transaction" asp-action="Add" style="text-decoration:none">Add new transaction</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category
                </th>
                <th>
                    Type
                </th>
                <th>
                    Value
                </th>
                <th>
                    Date
                </th>
                <th>
                    Description
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                    <tr>
                        <td style="width:5%">
                            @obj.Id
                        </td>
                        <td>
                            @obj.Category.Name
                        </td>
                        @if (obj.IsExpense)
                        {
                            <td>
                                Expense
                            </td>
                        }
                        else
                        {
                            <td>
                                Revenue
                            </td>
                        }
                        <td>
                            @obj.Value &#8372
                        </td>
                        <td>
                            @obj.Date
                        </td>
                        <td>
                            @obj.Description
                        </td>
                        <td style="width:160px">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@obj.Id"
                                    class="btn btn-info mx-2">Edit</a>
                            </div>
                        </td>
                        <td style="width:160px">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Transaction" asp-action="Delete" asp-route-id="@obj.Id"
                                    class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
